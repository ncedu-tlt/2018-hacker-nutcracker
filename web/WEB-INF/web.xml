<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <servlet-name>addServlet</servlet-name>
        <servlet-class>Servlets.addServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addServlet</servlet-name>
        <url-pattern>addPerson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowServlet</servlet-name>
        <servlet-class>Servlets.ShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowServlet</servlet-name>
        <url-pattern>ShowPersons</url-pattern>
    </servlet-mapping>

<servlet>
    <servlet-name>ShowSpecificPerson</servlet-name>
    <servlet-class>Servlets.ShowSpecificServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>ShowSpecificPerson</servlet-name>
        <url-pattern>ShowSpecificPerson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeletePerson</servlet-name>
        <servlet-class>Servlets.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletePerson</servlet-name>
        <url-pattern>DeletePerson</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangePersonServlet</servlet-name>
        <servlet-class>Servlets.ChangePersonServlet</servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>ChangePersonServlet</servlet-name>
    <url-pattern>ChangePerson</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>PersonPageServlet</servlet-name>
        <servlet-class>Servlets.PersonPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PersonPageServlet</servlet-name>
        <url-pattern>PersonPage</url-pattern>
    </servlet-mapping>
</web-app>

